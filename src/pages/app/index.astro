---
import AppLayout from "@/layouts/AppLayout.astro";
import Button from "@/components/ui/Button.astro";
import { getLangFromRequest, t } from "@/i18n";

const lang = getLangFromRequest(Astro.request);
const messages = t(lang);
const d = messages.dashboard ?? {};
const pageTitle = d.pageTitle || "Dashboard";
---

<AppLayout title={pageTitle}>
  <div class="grid gap-6">
    <!-- Carte bienvenue + crédits -->
    <div class="card p-6">
      <div class="flex flex-col gap-4 md:flex-row md:items-start md:justify-between">
        <div>
          <h2 class="text-xl font-semibold">
            {d.welcomeTitle}
          </h2>
          <p class="mt-2 text-gray-600">
            {d.welcomeBody}
          </p>

          <div class="mt-4 flex flex-wrap gap-3">
            <Button href="/app/generator">
              {d.openGenerator}
            </Button>
            <a href="/app/history" class="btn btn-ghost text-sm">
              {d.historyButton}
            </a>
          </div>
        </div>

        <!-- Bloc crédits -->
        <div class="mt-4 w-full max-w-xs rounded-2xl border border-slate-200/70 bg-white/80 px-4 py-3 text-sm text-slate-800 shadow-sm md:mt-0">
          <div class="text-xs text-slate-500">
            {d.creditsLabel}
          </div>
          <div class="mt-1 text-2xl font-semibold">
            <span id="credit-balance">…</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Carte achat de crédits -->
    <div class="card p-6 space-y-4">
      <h3 class="text-lg font-semibold">
        {d.buyCreditsTitle}
      </h3>

      <div class="flex flex-col gap-3 md:flex-row md:items-center">
        <label class="text-sm text-slate-700 md:w-1/3" for="credit-amount">
          {d.amountLabel}
        </label>
        <div class="flex items-center gap-3 md:w-2/3">
          <input
            id="credit-amount"
            type="number"
            min="3"
            value="3"
            class="input w-28"
          />
          <span class="text-xs text-slate-500">
            1 credit = 1&nbsp;USD
          </span>
        </div>
      </div>

      <p class="text-xs text-slate-500">
        {d.paypalHint}
      </p>

      <p id="billing-message" class="text-xs text-slate-500"></p>

      <div
        id="paypal-buttons"
        class="mt-2"
        data-min-label={d.minCreditsError}
        data-success-label={d.purchaseSuccess}
        data-error-label={d.purchaseError}
      ></div>
    </div>
  </div>

  <!-- Scripts dashboard (crédits + billing) -->
  <script type="module" src="/src/scripts/dashboardCredits.ts"></script>
  <script type="module" src="/src/scripts/dashboardBilling.ts"></script>
</AppLayout>
